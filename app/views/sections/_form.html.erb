<%= error_messages_for(f.object) %>

<div class="field">
  <%= f.label :name %><br>
  <%= f.object.page.name %>
</div>
<div class="field">
  <%= f.label :position %><br>
  <%= f.select(:position, 1..@section_count) %>
</div>
<div class="field">
  <%= f.label :visible %><br>
  <%= f.check_box(:visible) %>
</div>
<div class="field">
  <%= f.label :content_type %><br>
  <%= f.radio_button(:content_type, 'text') %> Text
  <%= f.radio_button(:content_type, 'HTML') %> HTML
</div>
<div class="field">
  <%= f.label :content %><br>
  <%= f.text_area(:content, :size => '40x10') %>
</div>
<div class="field">
  <%= f.label :image %><br>
  <%= f.file_field :image %>
  <% if f.object.image? %>
    <%= image_tag f.object.image.thumb.url %>
    <%= f.label :remove_image %>
    <%= f.check_box :remove_image %>
  <% end %>
</div>
