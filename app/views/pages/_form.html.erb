<%= error_messages_for(f.object) %>

<div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :subject %><br>
  <%= f.object.subject.name  %>
</div>
<div class="field">
  <%= f.label :permalink %><br>
  <%= f.text_field :permalink %>
</div>
<div class="field">
  <%= f.label :position %><br>
  <%= f.select :position, 1..@page_count %>
</div>
<div class="field">
  <%= f.label :visible %><br>
  <%= f.check_box :visible %>
</div>
<div class="field">
  <%= f.label :image %><br>
  <%= f.file_field :image %>
  <% if f.object.image? %>
    <%= image_tag f.object.image.thumb.url %>
    <%= f.label :remove_image %>
    <%= f.check_box :remove_image %>
  <% end %>
</div>
